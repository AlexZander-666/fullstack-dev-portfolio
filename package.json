{
  "name": "fullstack-dev-portfolio",
  "private": true,
  "version": "1.0.0",
  "description": "Full stack developer portfolio monorepo (Next.js + Express)",
  "scripts": {
    "dev": "npm-run-all -p dev:backend dev:frontend",
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "build": "npm-run-all build:backend build:frontend",
    "build:backend": "npm --prefix backend run build",
    "build:frontend": "npm --prefix frontend run build",
    "start": "npm --prefix backend run start",
    "start:frontend": "npm --prefix frontend run start",
    "lint": "npm-run-all lint:backend lint:frontend",
    "lint:backend": "npm --prefix backend run lint",
    "lint:frontend": "npm --prefix frontend run lint",
    "test": "echo \"Run service-level tests from backend/ or frontend/\""
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
